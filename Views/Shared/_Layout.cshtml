<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - TechNationDashboard</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/site.js"></script>
    <style>
        body {
            font-family: 'Arial', sans-serif;
        }

        .sidebar {
            height: 100vh;
            background-color: #e83e8c;
            padding-top: 20px;
            color: white;
        }

            .sidebar .nav-link {
                font-size: 1.1em;
                color: white;
            }

                .sidebar .nav-link.active {
                    background-color: #ff6394;
                    color: white;
                }

                .sidebar .nav-link:hover {
                    background-color: #ff6394;
                    color: white;
                }

        .navbar {
            background-color: #ffffff;
            border-bottom: 1px solid #dddddd;
        }

        .navbar-brand {
            color: #e83e8c;
            font-weight: bold;
        }

        .navbar-toggler {
            border: none;
            outline: none;
        }

        .navbar-toggler-icon {
            background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 30 30"><path stroke="rgba(0, 0, 0, 0.5)" stroke-width="2" d="M4 7h22M4 15h22M4 23h22"/></svg>');
        }

        .search-bar {
            display: flex;
            align-items: center;
            width: 100%;
            max-width: 300px;
            border: 1px solid #dddddd;
            border-radius: 25px;
            padding: 5px 10px;
        }

            .search-bar input {
                border: none;
                outline: none;
                width: 100%;
            }

                .search-bar input::placeholder {
                    color: #aaaaaa;
                }

        .navbar-nav .nav-link {
            color: #000000;
        }

        .user-icon {
            display: flex;
            align-items: center;
        }

            .user-icon img {
                border-radius: 50%;
                margin-right: 5px;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">Accusoft</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <form class="search-bar ml-auto mr-3">
                <input type="text" placeholder="Search here">
            </form>
            <ul class="navbar-nav">
                <li class="nav-item user-icon">
                    <img src="https://via.placeholder.com/30" alt="User Icon">
                    <a class="nav-link" href="#">Junio Matias</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="sidebar-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/">
                                <span class="feather icon-home"></span>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span class="feather icon-users"></span>
                                Customers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span class="feather icon-folder"></span>
                                Projects
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span class="feather icon-shopping-cart"></span>
                                Orders
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span class="feather icon-bar-chart-2"></span>
                                Inventory
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span class="feather icon-credit-card"></span>
                                Accounts
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span class="feather icon-check-square"></span>
                                Tasks
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>
    @RenderSection("Scripts", required: false)
    <script>
        $(document).ready(function () {
            $('.navbar-toggler').click(function () {
                $('#sidebarMenu').toggleClass('d-md-block');
            });
        });
    </script>
</body>
</html>
